@page
@model DotaDude.Pages.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<!-- Questa pagina non verrà normalmente visualizzata perché il controller indirizza automaticamente l'utente -->
<div class="dota-container logout-container text-center">
    <div class="dota-frame">
        <div class="dota-frame-header">
            <h2 class="dota-gold-text">Logout</h2>
        </div>
        <div class="dota-frame-content">
            <p class="mb-4">Logout in corso...</p>
            <div class="loading-spinner"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Redirect automatico dopo un breve ritardo
            setTimeout(function () {
                window.location.href = '/';
            }, 2000);
        });
    </script>
}
